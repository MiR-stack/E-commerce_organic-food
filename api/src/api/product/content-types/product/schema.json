{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true,
      "minLength": 3
    },
    "slug": {
      "type": "string",
      "unique": true
    },
    "permalink": {
      "type": "string",
      "unique": true
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "shortDescription": {
      "type": "text",
      "required": true,
      "unique": false,
      "minLength": 20
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "salePrice": {
      "type": "decimal"
    },
    "discount": {
      "type": "decimal"
    },
    "weight": {
      "type": "string",
      "required": true
    },
    "onSale": {
      "type": "boolean",
      "default": true
    },
    "purchaseable": {
      "type": "boolean",
      "default": true
    },
    "stockQuantity": {
      "type": "integer",
      "default": 1,
      "required": true
    },
    "stockStatus": {
      "type": "enumeration",
      "enum": [
        "available",
        "stock out",
        "coming soon"
      ],
      "default": "available"
    },
    "reviewsAllowed": {
      "type": "boolean",
      "default": true
    },
    "attributes": {
      "displayName": "attributes",
      "type": "component",
      "repeatable": false,
      "component": "product.attributes",
      "required": true
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "videos"
      ]
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "products"
    },
    "tags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tag.tag",
      "inversedBy": "products"
    },
    "variations": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::variation.variation",
      "mappedBy": "product"
    },
    "orders": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::order.order",
      "inversedBy": "products"
    },
    "products": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::product.product",
      "mappedBy": "related_products"
    },
    "related_products": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::product.product",
      "inversedBy": "products"
    },
    "sku": {
      "type": "string",
      "required": true
    },
    "totalSales": {
      "type": "integer",
      "min": 0,
      "default": 0
    },
    "avarageRating": {
      "type": "decimal",
      "max": 5,
      "min": 0,
      "default": 0
    },
    "ratingCount": {
      "type": "integer",
      "default": 0
    },
    "productId": {
      "type": "uid",
      "required": true,
      "targetField": "name"
    },
    "description": {
      "type": "customField",
      "options": {
        "output": "HTML",
        "preset": "standard"
      },
      "required": true,
      "customField": "plugin::ckeditor.CKEditor"
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo"
    },
    "reviews": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::review.review",
      "mappedBy": "product"
    }
  }
}
